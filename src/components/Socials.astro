---
import { Icon } from 'astro-icon';
import {
	EMAIL_ADDRESS,
	YOU_TUBE,
	MIX_CLOUD,
	INSTAGRAM,
	WHATSAPP,
	SPOTIFY,
} from '../utils/constants';

const socials = [
	{
		name: 'Mixcloud',
		href: MIX_CLOUD,
		id: 'mixcloud-icon',
	},
	{ name: 'Instagram', href: INSTAGRAM },
	{ name: 'WhatsApp', href: WHATSAPP },
	{ name: 'Mail', href: `mailto:${EMAIL_ADDRESS}` },
	{
		name: 'YouTube',
		href: YOU_TUBE,
	},
	{
		name: 'Spotify',
		href: SPOTIFY,
	},
];
---

<div class="social__container">
	{
		socials.map(({ name, href }) => (
			<a href={href} class="social__link" target="_blank">
				<Icon class="social__icon" name={name} />
			</a>
		))
	}
</div>

<style lang="scss">
	@import '../styles/main';
	.social {
		&__container {
			display: flex;
			gap: 1rem;
			height: 30px;
		}

		&__link {
			&:hover {
				transform: translateY(-0.35rem);
			}
		}
	}

	svg {
		height: 30px;
		fill: $white;
	}
</style>
