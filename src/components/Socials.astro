---
import { Icon } from 'astro-icon';

const socials = [
	{ name: 'WhatsApp', href: '' },
	{ name: 'Instagram', href: '' },
	{ name: 'YouTube', href: '' },
	{ name: 'Spotify', href: '' },
	{ name: 'Twitch', href: '' },
	{ name: 'Discord', href: '' },
];
---

<div class="social__container fade-in">
	{
		socials.map(({ name, href }) => (
			<a href={href} class="social__link">
				<Icon class="social__icon" name={name} />
			</a>
		))
	}
</div>

<style lang="scss">
	@import '../styles/main';
	.social {
		&__container {
			display: flex;
			gap: 1rem;
			height: 30px;
		}

		&__link {
			&:hover {
				transform: translateY(-0.35rem);
			}
		}
	}

	svg {
		height: 30px;
		fill: $white;
	}
</style>
