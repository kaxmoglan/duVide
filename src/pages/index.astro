---
import Layout from '../layouts/Layout.astro';
import Animation from '../components/Animation.astro';
import Socials from '../components/Socials.astro';
---

<Layout title="DJ DuVide">
	<main>
		<div class="container">
			<Animation />
			<div class="social-section">
				<Socials />
			</div>
		</div>
	</main>
</Layout>

<style lang="scss">
	.container {
		height: 100vh;

		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;

		.social-section {
			position: absolute;
			bottom: 2rem;
			right: 0;
		}
	}
</style>
